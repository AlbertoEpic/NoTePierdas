---
import { planetData } from '../data/planets';

const planets = planetData;
const basePath = import.meta.env.BASE_URL;
const normalizedBase =
	basePath === '/' ? '' : `/${basePath.replace(/^\/+|\/+$/g, '')}`;
const toBasePath = (path = '') => `${normalizedBase}/${path.replace(/^\/+/, '')}`;
const toAssetPath = (path = '') =>
	path.startsWith('/') ? `${normalizedBase}${path}` : `${normalizedBase}/${path}`;
const tones = [...new Set(planets.map((planet) => planet.tone))].sort((a, b) =>
	a.localeCompare(b, 'es', { sensitivity: 'base' })
);
const sizes = [...new Set(planets.map((planet) => planet.size))].sort((a, b) =>
	a.localeCompare(b, 'es', { sensitivity: 'base' })
);
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={toBasePath('favicon.svg')} />
		<link rel="icon" href={toBasePath('favicon.ico')} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>MINIPLANETAS | El Catálogo</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,500;9..144,700&family=Space+Grotesk:wght@400;500;600&display=swap"
		/>
	</head>
	<body>
		<header class="top">
			<a class="brand" href={toBasePath('')}>MINIPLANETAS</a>
			<button class="menu-toggle" type="button" aria-label="Abrir menú" aria-controls="main-nav" aria-expanded="false">
				<span></span>
				<span></span>
				<span></span>
			</button>
			<nav class="top-nav" id="main-nav">
				<a href={toBasePath('')}>El Universo</a>
				<a href={toBasePath('catalogo')} aria-current="page">Catálogo</a>
				<a href={toBasePath('como-nace-un-mini-planeta')}>¿Cómo nace un mini-planeta?</a>
				<a href={toBasePath('sobre-el-creador')}>Sobre el creador</a>
			</nav>
		</header>

		<main>
			<section class="intro">
				<p class="eyebrow">La Búsqueda</p>
				<h1>Catálogo técnico de planetas</h1>
			</section>

			<section class="filters" aria-label="Filtros del catálogo">
				<label>
					<span>Texto</span>
					<input id="filter-text" type="search" placeholder="Nombre o descripción" />
				</label>
				<label>
					<span>Tono</span>
					<select id="filter-tone">
						<option value="">Todos</option>
						{tones.map((tone) => <option value={tone}>{tone}</option>)}
					</select>
				</label>
				<label>
					<span>Escala</span>
					<select id="filter-size">
						<option value="">Todas</option>
						{sizes.map((size) => <option value={size}>{size}</option>)}
					</select>
				</label>
			</section>

			<section id="catalog-grid" class="grid">
				{planets.map((planet) => {
					const detailPath = toBasePath(`planetas/${planet.slug}`);
					return (
					<article
						class="card"
						data-name={planet.name.toLowerCase()}
						data-description={planet.description.toLowerCase()}
						data-tone={planet.tone}
						data-size={planet.size}
						data-href={detailPath}
						tabindex="0"
						title="Ver ficha"
					>
						<a href={detailPath} aria-label={`Ver ficha de ${planet.name}`}>
							<img src={toAssetPath(planet.image)} alt={`Mini planeta ${planet.name}`} loading="lazy" />
						</a>
						<div>
							<h2>{planet.name}</h2>
							<p>{planet.description}</p>
							<div class="meta">
								<span>{planet.tone}</span>
								<span>{planet.orbit}</span>
								<span>{planet.size}</span>
							</div>
						</div>
					</article>
					);
				})}
			</section>
		</main>
		<footer class="footer">
			<p>© 2026 MINIPLANETAS .:. SQLP .:. Made with ❤️ in Tierz for the entire Universe...</p>
		</footer>

		<script is:inline>
			const topHeader = document.querySelector('.top');
			const menuToggle = topHeader?.querySelector('.menu-toggle');
			const topNav = topHeader?.querySelector('.top-nav');

			if (topHeader && menuToggle && topNav) {
				topHeader.classList.add('is-menu-ready');

				const closeMenu = () => {
					topNav.classList.remove('is-open');
					menuToggle.setAttribute('aria-expanded', 'false');
					menuToggle.setAttribute('aria-label', 'Abrir menú');
				};

				menuToggle.addEventListener('click', () => {
					const isOpen = menuToggle.getAttribute('aria-expanded') === 'true';
					const shouldOpen = !isOpen;
					topNav.classList.toggle('is-open', shouldOpen);
					menuToggle.setAttribute('aria-expanded', String(shouldOpen));
					menuToggle.setAttribute('aria-label', shouldOpen ? 'Cerrar menú' : 'Abrir menú');
				});

				topNav.querySelectorAll('a').forEach((link) => {
					link.addEventListener('click', closeMenu);
				});

				window.addEventListener('resize', () => {
					if (window.innerWidth > 780) {
						closeMenu();
					}
				});
			}

			const textInput = document.querySelector('#filter-text');
			const toneSelect = document.querySelector('#filter-tone');
			const sizeSelect = document.querySelector('#filter-size');
			const catalogGrid = document.querySelector('#catalog-grid');
			const cards = Array.from(document.querySelectorAll('#catalog-grid .card'));
			const interactiveSelector = 'a, button, input, select, textarea';

			const runFilters = () => {
				const text = textInput?.value.toLowerCase().trim() || '';
				const tone = toneSelect?.value || '';
				const size = sizeSelect?.value || '';
				const hasActiveFilters = Boolean(text || tone || size);
				catalogGrid?.classList.toggle('is-filtered', hasActiveFilters);

				cards.forEach((card) => {
					const name = card.dataset.name || '';
					const description = card.dataset.description || '';
					const matchesText = !text || name.includes(text) || description.includes(text);
					const matchesTone = !tone || card.dataset.tone === tone;
					const matchesSize = !size || card.dataset.size === size;
					card.style.display = matchesText && matchesTone && matchesSize ? '' : 'none';
				});
			};

			textInput?.addEventListener('input', runFilters);
			toneSelect?.addEventListener('change', runFilters);
			sizeSelect?.addEventListener('change', runFilters);

			cards.forEach((card) => {
				const navigateToCard = () => {
					const href = card.dataset.href;
					if (href) {
						window.location.assign(href);
					}
				};

				card.addEventListener('click', (event) => {
					if (event.target.closest(interactiveSelector)) {
						return;
					}
					navigateToCard();
				});

				card.addEventListener('keydown', (event) => {
					if (event.key !== 'Enter' && event.key !== ' ') {
						return;
					}
					event.preventDefault();
					navigateToCard();
				});
			});
		</script>
	</body>
</html>

<style>
	:global(:root) {
		--bg-1: #07040f;
		--bg-2: #0e162e;
		--bg-3: #1a0936;
		--text: #f7f2ff;
		--muted: rgba(247, 242, 255, 0.78);
		--accent: #ffb74d;
		--accent-2: #4dd0e1;
		--stroke: rgba(255, 255, 255, 0.12);
	}

	:global(*) { box-sizing: border-box; }
	:global(body) {
		margin: 0;
		font-family: 'Space Grotesk', sans-serif;
		color: var(--text);
		background: linear-gradient(150deg, var(--bg-2), var(--bg-1) 60%, var(--bg-3));
	}
	:global(a) { color: inherit; text-decoration: none; }

	.top {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.2rem 6vw;
		position: sticky;
		top: 0;
		background: linear-gradient(180deg, rgba(7, 4, 15, 0.92), rgba(7, 4, 15, 0.5));
		backdrop-filter: blur(14px);
		border-bottom: 1px solid var(--stroke);
	}
	.brand { font-family: 'Fraunces', serif; letter-spacing: .22em; text-transform: uppercase; font-size: .9rem; }
	.top-nav { display: flex; gap: 1.2rem; }
	.menu-toggle {
		display: none;
		width: 2.75rem;
		height: 2.75rem;
		padding: 0;
		border-radius: .65rem;
		border: 1px solid var(--stroke);
		background: rgba(18, 12, 32, .78);
		cursor: pointer;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		gap: .28rem;
	}
	.menu-toggle span {
		display: block;
		width: 1rem;
		height: 2px;
		background: var(--text);
		transition: transform 180ms ease, opacity 180ms ease;
	}
	.menu-toggle[aria-expanded='true'] span:nth-child(1) { transform: translateY(6px) rotate(45deg); }
	.menu-toggle[aria-expanded='true'] span:nth-child(2) { opacity: 0; }
	.menu-toggle[aria-expanded='true'] span:nth-child(3) { transform: translateY(-6px) rotate(-45deg); }
	.top-nav a { opacity: .84; transition: opacity 200ms ease, color 200ms ease; }
	.top-nav a:hover { opacity: 1; }
	.top-nav a[aria-current='page'] { opacity: 1; color: var(--accent); font-weight: 600; }

	main { padding: 2rem 6vw 4rem; }
	.footer {
		padding: 1rem 6vw 1.5rem;
		border-top: 1px solid var(--stroke);
		text-align: center;
		font-size: .84rem;
		color: var(--muted);
	}
	.eyebrow { margin: 0; color: var(--accent); letter-spacing: .25em; text-transform: uppercase; font-size: .72rem; }
	.intro h1 { margin: .5rem 0 1.5rem; font-family: 'Fraunces', serif; }

	.filters {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
		gap: .85rem;
		margin-bottom: 1.4rem;
	}
	.filters label { display: grid; gap: .35rem; font-size: .86rem; }
	.filters input, .filters select {
		padding: .62rem .75rem;
		border-radius: .7rem;
		border: 1px solid var(--stroke);
		background: rgba(18, 12, 32, .8);
		color: var(--text);
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1rem;
	}
	.grid.is-filtered {
		grid-template-columns: repeat(auto-fill, minmax(250px, 320px));
		justify-content: start;
	}
	.card {
		background: rgba(18, 12, 32, .78);
		border: 1px solid var(--stroke);
		border-radius: 1rem;
		overflow: hidden;
		cursor: pointer;
		transition: transform .18s ease, border-color .18s ease, box-shadow .18s ease;
	}
	.card:hover {
		transform: translateY(-2px);
		border-color: rgba(77, 208, 225, .55);
		box-shadow: 0 10px 22px rgba(6, 4, 14, .38);
	}
	.card:focus-visible {
		outline: 2px solid var(--accent-2);
		outline-offset: 3px;
		border-color: rgba(77, 208, 225, .7);
	}
	.card > a { display: block; }
	.card img { width: 100%; aspect-ratio: 1/1; object-fit: cover; display: block; }
	.card > div { padding: .9rem; display: grid; gap: .5rem; }
	.card h2 { margin: 0; font-size: 1rem; }
	.card p { margin: 0; color: var(--muted); font-size: .9rem; }
	.meta { display: flex; flex-wrap: wrap; gap: .45rem; }
	.meta span {
		font-size: .72rem;
		padding: .2rem .48rem;
		border: 1px solid var(--stroke);
		border-radius: 999px;
	}

	@media (max-width: 780px) {
		.top {
			flex-wrap: wrap;
			gap: .8rem;
			padding: .95rem 5vw;
		}
		.brand {
			font-size: .78rem;
			letter-spacing: .16em;
		}
		.menu-toggle {
			display: inline-flex;
			margin-left: auto;
		}
		.top-nav {
			width: 100%;
			flex-direction: column;
			gap: .55rem;
			padding-top: 0;
			border-top: 1px solid transparent;
			overflow: hidden;
		}
		.top-nav a {
			font-size: .98rem;
			padding: .18rem 0;
		}
		.top.is-menu-ready .top-nav {
			display: flex;
			max-height: 0;
			opacity: 0;
			transform: translateY(-6px);
			pointer-events: none;
			transition:
				max-height 220ms ease,
				opacity 180ms ease,
				transform 180ms ease,
				padding-top 180ms ease,
				border-top-color 180ms ease;
		}
		.top.is-menu-ready .top-nav.is-open {
			max-height: 16rem;
			opacity: 1;
			padding-top: .75rem;
			border-top-color: var(--stroke);
			transform: translateY(0);
			pointer-events: auto;
		}
	}
</style>
