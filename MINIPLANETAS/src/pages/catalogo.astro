---
import { planetData } from '../data/planets';

const planets = planetData;
const tones = [...new Set(planets.map((planet) => planet.tone))].sort((a, b) =>
	a.localeCompare(b, 'es', { sensitivity: 'base' })
);
const sizes = [...new Set(planets.map((planet) => planet.size))].sort((a, b) =>
	a.localeCompare(b, 'es', { sensitivity: 'base' })
);
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>MINIPLANETAS | El Catálogo</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,500;9..144,700&family=Space+Grotesk:wght@400;500;600&display=swap"
		/>
	</head>
	<body>
		<header class="top">
			<a class="brand" href="/">MINIPLANETAS</a>
			<nav class="top-nav">
				<a href="/">El Universo</a>
				<a href="/sobre">Sobre el creador</a>
			</nav>
		</header>

		<main>
			<section class="intro">
				<p class="eyebrow">La Búsqueda</p>
				<h1>Catálogo técnico de planetas</h1>
			</section>

			<section class="filters" aria-label="Filtros del catálogo">
				<label>
					<span>Texto</span>
					<input id="filter-text" type="search" placeholder="Nombre o descripción" />
				</label>
				<label>
					<span>Tono</span>
					<select id="filter-tone">
						<option value="">Todos</option>
						{tones.map((tone) => <option value={tone}>{tone}</option>)}
					</select>
				</label>
				<label>
					<span>Escala</span>
					<select id="filter-size">
						<option value="">Todas</option>
						{sizes.map((size) => <option value={size}>{size}</option>)}
					</select>
				</label>
			</section>

			<section id="catalog-grid" class="grid">
				{planets.map((planet) => (
					<article
						class="card"
						data-name={planet.name.toLowerCase()}
						data-description={planet.description.toLowerCase()}
						data-tone={planet.tone}
						data-size={planet.size}
					>
						<img src={planet.image} alt={`Mini planeta ${planet.name}`} loading="lazy" />
						<div>
							<h2>{planet.name}</h2>
							<p>{planet.description}</p>
							<div class="meta">
								<span>{planet.tone}</span>
								<span>{planet.orbit}</span>
								<span>{planet.size}</span>
							</div>
							<a href={`/planetas/${planet.slug}`}>Ver ficha</a>
						</div>
					</article>
				))}
			</section>
		</main>

		<script is:inline>
			const textInput = document.querySelector('#filter-text');
			const toneSelect = document.querySelector('#filter-tone');
			const sizeSelect = document.querySelector('#filter-size');
			const cards = Array.from(document.querySelectorAll('#catalog-grid .card'));

			const runFilters = () => {
				const text = (textInput?.value || '').toLowerCase().trim();
				const tone = toneSelect?.value || '';
				const size = sizeSelect?.value || '';

				cards.forEach((card) => {
					const matchesText = !text || card.dataset.name.includes(text) || card.dataset.description.includes(text);
					const matchesTone = !tone || card.dataset.tone === tone;
					const matchesSize = !size || card.dataset.size === size;
					card.style.display = matchesText && matchesTone && matchesSize ? '' : 'none';
				});
			};

			textInput?.addEventListener('input', runFilters);
			toneSelect?.addEventListener('change', runFilters);
			sizeSelect?.addEventListener('change', runFilters);
		</script>
	</body>
</html>

<style>
	:global(:root) {
		--bg-1: #07040f;
		--bg-2: #0e162e;
		--bg-3: #1a0936;
		--text: #f7f2ff;
		--muted: rgba(247, 242, 255, 0.78);
		--accent: #ffb74d;
		--accent-2: #4dd0e1;
		--stroke: rgba(255, 255, 255, 0.12);
	}

	:global(*) { box-sizing: border-box; }
	:global(body) {
		margin: 0;
		font-family: 'Space Grotesk', sans-serif;
		color: var(--text);
		background: linear-gradient(150deg, var(--bg-2), var(--bg-1) 60%, var(--bg-3));
	}
	:global(a) { color: inherit; text-decoration: none; }

	.top {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.2rem 6vw;
		position: sticky;
		top: 0;
		background: linear-gradient(180deg, rgba(7, 4, 15, 0.92), rgba(7, 4, 15, 0.5));
		backdrop-filter: blur(14px);
		border-bottom: 1px solid var(--stroke);
	}
	.brand { font-family: 'Fraunces', serif; letter-spacing: .22em; text-transform: uppercase; font-size: .9rem; }
	.top-nav { display: flex; gap: 1.2rem; }

	main { padding: 2rem 6vw 4rem; }
	.eyebrow { margin: 0; color: var(--accent); letter-spacing: .25em; text-transform: uppercase; font-size: .72rem; }
	.intro h1 { margin: .5rem 0 1.5rem; font-family: 'Fraunces', serif; }

	.filters {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
		gap: .85rem;
		margin-bottom: 1.4rem;
	}
	.filters label { display: grid; gap: .35rem; font-size: .86rem; }
	.filters input, .filters select {
		padding: .62rem .75rem;
		border-radius: .7rem;
		border: 1px solid var(--stroke);
		background: rgba(18, 12, 32, .8);
		color: var(--text);
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1rem;
	}
	.card {
		background: rgba(18, 12, 32, .78);
		border: 1px solid var(--stroke);
		border-radius: 1rem;
		overflow: hidden;
	}
	.card img { width: 100%; aspect-ratio: 1/1; object-fit: cover; display: block; }
	.card > div { padding: .9rem; display: grid; gap: .5rem; }
	.card h2 { margin: 0; font-size: 1rem; }
	.card p { margin: 0; color: var(--muted); font-size: .9rem; }
	.meta { display: flex; flex-wrap: wrap; gap: .45rem; }
	.meta span {
		font-size: .72rem;
		padding: .2rem .48rem;
		border: 1px solid var(--stroke);
		border-radius: 999px;
	}
	.card a {
		justify-self: start;
		font-size: .85rem;
		padding: .4rem .72rem;
		border-radius: 999px;
		background: linear-gradient(120deg, var(--accent), var(--accent-2));
		color: #1b0d2b;
		font-weight: 600;
	}
</style>
