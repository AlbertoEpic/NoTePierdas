		</header>

		<section class="grid">
			{videos.map((video) => {
				const videoId = new URL(video.url).searchParams.get('v');
				return (
					<article class="card">
						<a class="thumb" href={video.url} target="_blank" rel="noreferrer">
							<img
								src={`https://img.youtube.com/vi/${videoId}/hqdefault.jpg`}
								alt={`Portada del video ${video.title}`}
								loading="lazy"
							/>
						</a>
						<div class="card-header">
							<h2>{video.title}</h2>
							<a href={video.url} target="_blank" rel="noreferrer">
								Ver en YouTube
							</a>
						</div>
						<p class="meta">
							<span>{video.channel}</span>
						</p>
						<p class="description">{video.description}</p>
					</article>
				);
			})}
		</section>
	</main>
</Layout>
