---
const base = import.meta.env.BASE_URL;
const fallbackBase = '/NoTePierdas';
const baseRoot = (base || fallbackBase).replace(/\/+$/, '');
const normalizedBase = baseRoot === '/' ? '' : baseRoot;
const toBasePath = (path = '') => `${normalizedBase}/${path.replace(/^\/+/, '')}`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={toBasePath('logoSQLP.png')} />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics - SQLP On The Edge!</title>
		<slot name="head" />
	</head>
	<body>
		<header class="site-header">
			<div class="site-shell">
				<a class="brand" href={toBasePath('')}>La Meteo Que Viene</a>
				<nav class="site-nav" aria-label="Secciones">
					<a href={toBasePath('videos')}>VÃ­deos</a>
					<a href={toBasePath('shorts')}>Shorts</a>
					<a href={toBasePath('reels')}>Reels</a>
					<a href={toBasePath('rutas')}>Rutas GPS</a>
					<a href={toBasePath('MINIPLANETAS')}>MINIPLANETAS</a>
				</nav>
			</div>
		</header>
		<slot />
	</body>
</html>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap');

	:global(:root) {
		color-scheme: dark;
		--bg-1: #06070d;
		--bg-2: #0d111a;
		--surface: rgba(12, 18, 32, 0.78);
		--surface-strong: rgba(5, 8, 16, 0.85);
		--stroke: rgba(212, 175, 55, 0.25);
		--stroke-soft: rgba(148, 163, 184, 0.18);
		--text: #f8fafc;
		--muted: #cbd5f5;
		--gold: #d4af37;
		--gold-soft: #f4e1a1;
		--accent: #6aa6ff;
		--radius-xl: 24px;
		--radius-lg: 18px;
		--shadow-xl: 0 40px 80px rgba(2, 6, 23, 0.65);
		--shadow-lg: 0 24px 50px rgba(2, 6, 23, 0.5);
	}

	:global(*) {
		box-sizing: border-box;
	}

	:global(html,
		body) {
		width: 100%;
		min-height: 100%;
	}

	:global(body) {
		margin: 0;
		font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		background:
			radial-gradient(circle at top right, rgba(212, 175, 55, 0.12), transparent 45%),
			radial-gradient(circle at top left, rgba(106, 166, 255, 0.18), transparent 40%),
			linear-gradient(180deg, var(--bg-2), var(--bg-1));
		color: var(--text);
		line-height: 1.6;
	}

	:global(a) {
		color: inherit;
		text-decoration: none;
	}

	:global(img) {
		max-width: 100%;
		display: block;
	}

	:global(.page) {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 1.5rem 5rem;
		display: flex;
		flex-direction: column;
		gap: 2.75rem;
	}

	:global(.hero) {
		display: grid;
		gap: 0.85rem;
		padding: 2.25rem;
		border-radius: var(--radius-xl);
		background: var(--surface);
		border: 1px solid var(--stroke-soft);
		box-shadow: var(--shadow-xl);
		backdrop-filter: blur(18px);
	}

	:global(.hero h1) {
		margin: 0;
		font-family: 'Playfair Display', 'Inter', serif;
		font-weight: 600;
		font-size: clamp(2.4rem, 3.6vw, 3.6rem);
		letter-spacing: 0.01em;
	}

	:global(.eyebrow) {
		letter-spacing: 0.32rem;
		text-transform: uppercase;
		font-size: 0.72rem;
		color: var(--gold);
		margin: 0;
	}

	:global(.subtitle) {
		margin: 0;
		max-width: 720px;
		color: var(--muted);
		font-size: 1.05rem;
	}

	:global(.grid) {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 1.75rem;
	}

	:global(.card) {
		background: linear-gradient(160deg, rgba(15, 23, 42, 0.95), rgba(5, 8, 16, 0.9));
		border-radius: var(--radius-lg);
		padding: 1.5rem;
		border: 1px solid var(--stroke-soft);
		box-shadow: var(--shadow-lg);
		display: grid;
		gap: 1rem;
		transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
		overflow: hidden;
	}

	:global(.card:hover) {
		transform: translateY(-4px);
		border-color: var(--stroke);
		box-shadow: 0 36px 70px rgba(2, 6, 23, 0.7);
	}

	:global(.card-body) {
		display: grid;
		gap: 0.5rem;
	}

	:global(.card h2) {
		margin: 0;
		font-size: 1.2rem;
		color: var(--text);
	}

	:global(.card p) {
		margin: 0;
		color: var(--muted);
	}

	:global(.thumb) {
		display: block;
		border-radius: 16px;
		overflow: hidden;
		border: 1px solid rgba(212, 175, 55, 0.2);
		background: var(--surface-strong);
		aspect-ratio: 16 / 9;
		margin: -1.5rem -1.5rem 0.75rem;
	}

	:global(.thumb img) {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	:global(.card-header) {
		display: grid;
		gap: 0.5rem;
	}

	:global(.card-header a) {
		width: fit-content;
		padding: 0.4rem 0.9rem;
		border-radius: 999px;
		border: 1px solid rgba(212, 175, 55, 0.45);
		color: var(--gold-soft);
		background: rgba(212, 175, 55, 0.12);
		font-weight: 600;
		font-size: 0.9rem;
		transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
	}

	:global(.card-header a:hover) {
		background: rgba(212, 175, 55, 0.22);
		border-color: rgba(212, 175, 55, 0.7);
		transform: translateY(-1px);
	}

	:global(.action,
		.back) {
		align-self: flex-start;
		padding: 0.65rem 1.4rem;
		border-radius: 999px;
		background: linear-gradient(135deg, #f4e1a1 0%, #d4af37 45%, #8f6b1d 100%);
		color: #0b0b0f;
		font-weight: 700;
		letter-spacing: 0.02em;
		box-shadow: 0 16px 30px rgba(212, 175, 55, 0.25);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	:global(.action:hover,
		.back:hover) {
		transform: translateY(-2px);
		box-shadow: 0 24px 40px rgba(212, 175, 55, 0.35);
	}

	:global(.meta) {
		font-size: 0.9rem;
		color: rgba(248, 250, 252, 0.7);
	}

	:global(.description) {
		font-size: 0.95rem;
		color: var(--muted);
	}

	:global(.page--reels .thumb) {
		aspect-ratio: 9 / 16;
	}

	:global(.site-header) {
		position: sticky;
		top: 0;
		z-index: 10;
		backdrop-filter: blur(18px);
		background:
			radial-gradient(circle at top left, rgba(212, 175, 55, 0.12), transparent 45%),
			linear-gradient(180deg, rgba(6, 7, 13, 0.98), rgba(6, 7, 13, 0.72));
		border-bottom: 1px solid rgba(212, 175, 55, 0.22);
		box-shadow: 0 12px 30px rgba(2, 6, 23, 0.5);
	}

	:global(.site-shell) {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1.1rem 1.5rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	:global(.brand) {
		font-family: 'Playfair Display', 'Inter', serif;
		font-weight: 600;
		font-size: 1.05rem;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: var(--gold-soft);
		padding: 0.4rem 0.9rem;
		border-radius: 999px;
		border: 1px solid rgba(212, 175, 55, 0.35);
		background: rgba(212, 175, 55, 0.08);
		box-shadow: inset 0 0 0 1px rgba(212, 175, 55, 0.08);
	}

	:global(.site-nav) {
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
	}

	:global(.site-nav a) {
		padding: 0.45rem 1rem;
		border-radius: 999px;
		border: 1px solid rgba(212, 175, 55, 0.35);
		color: var(--gold-soft);
		background: rgba(212, 175, 55, 0.06);
		font-weight: 600;
		font-size: 0.9rem;
		letter-spacing: 0.02em;
		transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
	}

	:global(.site-nav a:hover) {
		background: rgba(212, 175, 55, 0.22);
		border-color: rgba(212, 175, 55, 0.75);
		transform: translateY(-1px);
		box-shadow: 0 10px 20px rgba(212, 175, 55, 0.18);
	}

	:global(@media (max-width: 720px)) {
		.site-shell {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
